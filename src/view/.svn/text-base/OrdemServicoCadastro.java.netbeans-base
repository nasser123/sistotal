    private void jButtonGravarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonGravarActionPerformed
       Cliente c = new Cliente();
       c.setNome(this.jTextFieldNome.getText());
       c.setCelular("("+this.jFormattedTextFieldDDCelular.getText()+")"+this.jFormattedTextFieldCelular.getText());
       c.setFone("("+this.jFormattedTextFieldDDFone.getText()+")"+this.jFormattedTextFieldFone.getText());
       c.setIdcidade(new Cidade(4266));
       c.setIdsituacaoCliente(new SituacaoCliente(1));
       
       SistotalPUEntityManager.getTransaction().begin();
       SistotalPUEntityManager.persist(c);
      // SistotalPUEntityManager.getTransaction().commit();
       
       
       OrdemServico os = new OrdemServico();
       os.setProcessador(this.jTextFieldProcessador.getText());
       os.setMemoria(this.jTextFieldMemoria.getText());
       os.setDiscoRigido(this.jTextFieldDiscoRigido.getText());
       os.setFonte(this.jTextFieldFonte.getText());
       os.setPlacaMae(this.jTextFieldPlacaMae.getText());
       os.setMarca(this.jTextFieldMarca.getText());
       os.setIdequipamento((Equipamento)jComboBoxEquipamento.getSelectedItem());
       os.setEfeitoCliente(jTextAreaEfeitoCliente.getText());
       os.setObservacao(jTextAreaObservacoes.getText());
       os.setIdsituacaoOs((SituacaoOs)jComboBoxSituacaoOS.getSelectedItem());
       os.setDataAbertura(jDateChooserAbertura.getDate());
       os.setIdcliente(c);
       
      // SistotalPUEntityManager.getTransaction().begin();
       SistotalPUEntityManager.persist(os);
       SistotalPUEntityManager.getTransaction().commit();
       
       JOptionPane.showMessageDialog(rootPane, "Ordem de serviço gravada com sucesso");
       
       OrdemServicoCadastro osc = new OrdemServicoCadastro();
       osc.setVisible(true);
       this.dispose();
       
    }//GEN-LAST:event_jButtonGravarActionPerformed

